<Window x:Class="SerialPower.CurrentWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SerialPower"
		mc:Ignorable="d"
		WindowStyle="ToolWindow"
		WindowStartupLocation="CenterScreen"
		Background="{StaticResource BackgroundStyle}"
		ResizeMode="NoResize"
		Title="Serial Power - Current" Height="120" Width="360" Closed="WindowClosed">
	<Grid Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<Label Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" FontSize="16">Channel 1</Label>
		<TextBox x:Name="TextBoxCH1Current" Grid.Row="1" Grid.Column="0" Margin="5" IsReadOnly="True" Text="N/A" VerticalContentAlignment="Center"></TextBox>
		
		<Label Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelStyle}" FontSize="16">Channel 2</Label>
		<TextBox x:Name="TextBoxCH2Current" Grid.Row="1" Grid.Column="1" Margin="5" IsReadOnly="True" Text="N/A" VerticalContentAlignment="Center"></TextBox>
	</Grid>
</Window>
