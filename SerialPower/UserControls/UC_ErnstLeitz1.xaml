<UserControl x:Class="SerialPower.UserControls.UC_ErnstLeitz1"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:SerialPower.UserControls"
			 mc:Ignorable="d" 
			 Background="{StaticResource BackgroundStyle}"
			 d:DesignHeight="720" d:DesignWidth="1280">
	<DockPanel LastChildFill="True" Margin="5">
		<Label DockPanel.Dock="Top" Style="{StaticResource LabelTitleDark}">Ernst Leitz [85/15186]</Label>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition></ColumnDefinition>
			</Grid.ColumnDefinitions>
			
			<!-- Programming -->
			<Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="{StaticResource BackgroundStyleAlternativ}" BorderThickness="2">
				<StackPanel>
					<Label Style="{StaticResource LabelStyleDark}" Content="Programming mode 24V (Intern):"></Label>
					<ToggleButton x:Name="ToggleButtonProgrammingMode" Style="{StaticResource ToggleButtonDark}" Margin="15" Content="Disabled" Click="ToggleButtonProgrammingMode_Click"></ToggleButton>
				</StackPanel>
			</Border>
			
			<!-- Test -->
			<Border Grid.Row="3" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="4" BorderBrush="{StaticResource BackgroundStyleAlternativ}" BorderThickness="2">
				<StackPanel>
					<Label Style="{StaticResource LabelStyleDark}" Content="Test Phase"></Label>
					<Button x:Name="ButtonStart" Style="{StaticResource ButtonDark}" Content="Start Test" Margin="0,25,0,25" Height="40" Width="150" Click="ButtonStart_Click" HorizontalAlignment="Center"/>
					<TextBox x:Name="TextBlockCurrentTestState" Text="READY" Style="{StaticResource TextBoxDark}" Margin="0,2,0,25" Height="40" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" HorizontalAlignment="Center"/>
					<ProgressBar x:Name="ProgressBarTestPhase" VerticalAlignment="Center" Margin="50,0,50,0" Minimum="0" Maximum="100" Height="25"></ProgressBar>
					<TextBox Style="{StaticResource TextBoxDark}" Background="Transparent" Margin="0,10,0,0" Text="{Binding ElementName=ProgressBarTestPhase, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />
				</StackPanel>
			</Border>
		</Grid>
	</DockPanel>
</UserControl>
